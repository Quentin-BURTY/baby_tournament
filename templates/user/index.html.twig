{% extends 'layout.html.twig' %}

{% block title %}Joueurs
{% endblock %}

{% block content %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for user in users %}
			<tr>
				<td>{{user.username}}</td>
				<td>
					<a href="{{ path('user_delete', {'id': user.id}) }}">supprimer</a></br>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="8">Aucun joueur inscrit</td>
			</tr>
		{% endfor %}

		<a href="{{ path('user_new') }}">Inscrire un nouveau joueur</a>

	</div>

{% endblock %}
